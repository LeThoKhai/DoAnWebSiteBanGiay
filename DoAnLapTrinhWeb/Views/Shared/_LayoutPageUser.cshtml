        <div class="container">
            <!--logo and menu-->
            <div class="navbar">
                <div class="logo">
                    <img src="~/imgs/giay/logonhom.png" alt="" width="180px">
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><a href="">Home</a></li>
                        <li><a href="">Products</a></li>
                        <li><a href="">About</a></li>
                        <li><a href="">Contact</a></li>
