                        <h2>@Model.Tengiay</h2>
                        <p>@Model.Mota</p>
                    </div>
                    <div class="free_delivery d-flex flex-row align-items-center justify-content-center">
                        <span class="ti-truck"></span><span>free delivery</span>
                    </div>
                    <div class="product_price">@Math.Round(Model.Giagiay, 0)</div>
                    <ul class="star_rating">
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                    </ul>
                    <div class="product_color">
                        <span>Loại giày</span>
                        <ul>
                            <li>@Model.Maloai</li>
                        </ul>
                    </div>
                    <div class="product_color">
                        <span>Size</span>
                        <ul>
                            <li>@Model.Size</li>
                        </ul>
                    </div>
                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                      
                        @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                        {
                            <span>Quantity:</span>
                            <div class="quantity_selector">
                                <span class="minus" onclick='Change_Value("minus")'><i class="fa fa-minus" aria-hidden="true"></i></span>
                                <span id="quantity_value">0</span>
                                <span class="plus" onclick='Change_Value("plus")'><i class="fa fa-plus" aria-hidden="true"></i></span>
                            </div>
                            @Html.HiddenFor(m => m.soluong, new { @id = "soluong", @readonly = "readonly" })
                            
                            <div style="padding-top:10px" class="red_button add_to_cart_button">
                                @if (Model != null && !string.IsNullOrEmpty(Session["UserId"] as string))
                                {
                                    <button type="submit" style="background:none;">Add to Cart</button>
                                    @Html.HiddenFor(m => m.Magiay)
                                    @Html.Hidden("userId", Session["UserId"])
                                    @Html.Hidden("soluong", Model.soluong)
                                }
                                else
                                {
                                    <span>Please log in to add to cart</span>
                                }
                            </div>
                        }
                        <div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
                    </div>
